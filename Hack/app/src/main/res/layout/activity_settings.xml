<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:layout_margin="15dp">

        <TextView
            android:id="@+id/settings_settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/hackTheme"
            android:textSize="30sp"/>

        <TextView
            android:layout_below="@id/settings_settings_text"
            android:id="@+id/settings_myposts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Posts"
            android:textSize="20sp"
            android:textColor="@color/hackTheme"/>

        <TextView
            android:id="@+id/settings_radius_head"
            android:layout_below="@id/settings_myposts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radius of Search"/>



        <TextView
            android:id="@+id/search_radius_text"
            android:layout_below="@id/settings_radius_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/settings_0_km"
            android:layout_below="@id/settings_radius_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Km"/>

        <SeekBar
            android:id="@+id/settings_radius_seekbar"
            android:layout_below="@id/settings_0_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <Button
            android:id="@+id/settings_signout_button"
            android:layout_below="@id/settings_radius_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@color/hackTheme"
            android:background="@drawable/form_submit_button"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>